#!/bin/sh

dotfiles="$HOME/.dotfiles"
source "$dotfiles/script/helpers.sh"

enter_sudo

cd $dotfiles

for topic in git homebrew; do
	sh "$dotfiles/$topic/setup.sh"
done

setups=$(find * -name "setup.sh" \
            -not -wholename "git/*" \
            -not -wholename "homebrew/*")

for setup in $setups; do
	sh "$dotfiles/$setup"
done
